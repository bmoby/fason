   $(function() {
      $('.general-rating').barrating({
        theme: 'fontawesome-stars-o',
        initialRating: {{rating.general}},
        readonly: true
      });

      $('.precision-rating').barrating({
        theme: 'fontawesome-stars-o',
        initialRating: {{rating.precision}},
        readonly: true
      });

      $('.ponctuality-rating').barrating({
        theme: 'fontawesome-stars-o',
        initialRating: {{rating.ponctuality}},
        readonly: true
      });

      $('.quality-rating').barrating({
        theme: 'fontawesome-stars-o',
