<div class="container hidden-xs home-search-container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-left home-search-search-title">Recherche </h2>
            <p class="text-left home-search-paragraph">Entrez vos criteres et retrouvez les stylistes de votre ville!</p>
        </div>
    </div>
    <div class="row" id="home-search-container-first-row">
      <form class="" action="/search" method="post">
        <!-- {{cityResend}} est celui qui revien la ville a remplacer dans value apres -->
        <div class="col-lg-4 col-md-4 col-sm-4 home-search-row-city">
            <input type="text" class="city-search mainLoginInput" placeholder="Entrez votre ville" name="city" value="Paris, France" disabled>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 home-search-row-selections">
            <div class="row search-selection-row">
                <div class="col-lg-6 col-md-6 col-sm-6 selection-column-one">
                    <select class="select-gender wide" name="gender">
                        <optgroup label="This is a group">
                          <option disable>Homme & Femme</option>
                          <option value="men" {{#if men}} selected 1{{/if}}class="men">Homme</option>
                          <option value="ladies" class="ladies" {{#if ladies}} selected 1{{/if}}>Femme</option>
                        </optgroup>
                    </select>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 selection-column-one">
                    <select class="select-style wide" name="style">
                        <optgroup label="This is a group">
                          <option {{#if styleObj.vestimentaire}}selected 0{{/if}} value="vestimentaire">Vestimentaire</option>
                          <option {{#if styleObj.beaute}}selected 0{{/if}} value="beaute">Beaut√©e</option>
                        </optgroup>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 home-search-row-seachbtn">
            <button class="btn btn-default" type="submit" id="home-search-btn">Recherche</button>
        </div>
      </form>
    </div>
</div>
<div class="container visible-xs-block home-xs-search-container">
    <div class="row home-xs-search-row">
        <div class="col-xs-9 home-xs-search-placeholder" placeholder="Recherche">
            <button class="btn btn-default home-xs-search-redirect-btn" type="button"> <a href="/searchxs">Recherche</a></button>
        </div>
        <div class="col-xs-3 home-search-xs-row-column-icon text-center"><i class="fa fa-search home-xs-seach-icon"></i></div>
    </div>
</div>
