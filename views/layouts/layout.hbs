</head>
<body>
	{{#if user}}
		{{#if user.connu}}
			<div class="full-page connu-page">
			  {{> connu}}
			</div>
		{{/if}}
	{{/if}}
	<div class="full-page loading-page">
	  {{> loading}}
	</div>

		{{{body}}}
	<script type="text/javascript">

	if(window.location.pathname == '/search'){
		setTimeout(function(){
			$('.loading-page').fadeOut();
		}, 5000);
	}
	$(window).load(function(){
		 $('.loading-page').fadeOut();
	});
	</script>
	<script src="//js.pusher.com/4.0/pusher.min.js"></script>
	<script src="/js/header.js"></script>
	{{#if user}}
		{{#if user.connu}}
		<link rel="stylesheet" href="../css/niceselect.css">
			<script type="text/javascript">
				$('.commentconnubtn').on('click', function(){
					var moyen = $('.selectconnu').val();
					 if(moyen != "Moyen"){
						 $.ajax({
							 url: '/connu',
							 method: 'POST',
							 contentType: 'application/json',
							 data: JSON.stringify({"moyen": moyen}),
							 success: function(response){
								 if(response.saveok){
									 $('.commentconnu').text("Merci !");
									 $('.connu-page').delay(500).fadeOut(400);
								 }
							 }
						 })
					 }
				});
			</script>
		{{/if}}
	{{/if}}
	<link rel="stylesheet" href="//fonts.googleapis.com/css?family=Nunito">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
