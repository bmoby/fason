  <script type="text/javascript">
  $(document).ready(function(){
  	if(window.location.pathname == '/stylebox/{{styleboxId}}'){
  		var title=$('.forstyleTitle').text();
  		var description=$('.forstyleDescription').text();
  		var photoUrl=$('.masoneryContainer').find("a").attr('href');

  		document.title=title;
  		$("meta[name='description']").attr("content", description);
  		$('head').append('<meta property="fb:admins " content="415137618819195">')
  		$('head').append('<meta property="og:site_name" content="Fason">');
  		$('head').append('<meta property="og:title" content='+title+'>');
  		$('head').append('<meta property="og:type" content="website">');
  		$('head').append('<meta property="og:url" content='+"https://www.fason.co/stylebox/{{styleboxId}}"+'>');
  		$('head').append('<meta property="og:image" content='+photoUrl+'>');
  		$('head').append('<meta property="og:description" content='+description+'>');
  		$('head').append('<meta property="og:width" content>');
  		$('head').append('<meta property="og:height" content>');
  		$('head').append('<meta property="og:locale" content="fr_FR">');
  	}
  });
