{{#if user}}
  {{> userheader}}
{{else}}
  {{> header}}
{{/if}}
<div class="full-page hidden messages-page">
  {{> messages}}
</div>
<div class="container">
  {{#if empty}}
    <div class="messages-container-div-title">
      <h1 class="errmsg">Vous n'avez aucun message pour le moment.</h1>
    </div>
  {{else}}
    <div class="row">
      <div class="messages-container-div-title">
          <h1 class="inboxtitle">Messages</h1>
      </div>
    </div>
    {{#each convers}}
      <div class="row conversation-row" data-conv-id='{{this.conv.id}}'>
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3 text-center">
              <div class="stylebox-display-avatar-inbox" {{#if this.convAva}} style="background-image: url({{this.convAva}})" {{else}} style="background-image: url(/images/noavatar.png)"{{/if}}></div>
              <p class="conversation-with">{{this.convName}}</p>
          </div>
          <div class="col-lg-10 col-md-10 col-sm-10 col-xs-9 childOne">
              <div class="row conversation-first-info-row childTwo">
                  <div class="col-lg-4 col-md-4 col-sm-5 col-xs-6 childThree">
                    <i class="fa fa-envelope-o inbox-icons-enveloppe newMsg-large {{this.conv.id}}icon" {{#if hasNoRead}} style="color: rgb(217,83,79)"{{/if}}>{{#if hasNoRead}} <p class="newMessage inlinep {{this.conv.id}}new">Nouveau</p> {{/if}}</i>
                  </div>
                  <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 text-right">
                    <i class="fa fa-trash-o inbox-menu-icons delete-conversation-icon visible-xs"></i>

                      <p class="conversation-date hidden-xs">{{this.convCreatedTime}}</p>
                  </div>
              </div>
              <div class="row last-message-row">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <p class="conversation-last-message limit-large {{this.conv.id}}last">{{subject (last this.conv.messages)}}</p>
                  </div>
              </div>
              <!-- <div class="row last-message-row visible-xs-block">
                  <div class="col-md-12">
                    <div class="row visible-xs-block"><div class="newMsg-xs"><i class="fa fa-envelope-o inbox-icons {{this.conv.id}}icon" {{#if hasNoRead}} style="color: rgb(217,83,79)" {{/if}}>{{#if hasNoRead}} <p class="newMessage inlinep {{this.conv.id}}new">Nouveau</p> {{/if}}</i></div></div></br>
                    <div class="row visible-xs-block"><p class="conversation-last-message limit {{this.conv.id}}last">{{subject (last this.conv.messages)}}</p></div>
                  </div>
              </div> -->
              <div class="row text-right conversation-menu hidden-xs">
                  <div class="col-md-12 general-column"><i class="fa fa-trash-o inbox-menu-icons delete-conversation-icon"></i></div>
              </div>
          </div>
      </div>
    {{/each}}
  {{/if}}
</div>
<script type="text/javascript" src="../js/conversation.js"></script>
